<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_list_height"
    android:orientation="horizontal"
    android:layout_marginLeft="@dimen/app_margin_width"
    android:layout_marginRight="@dimen/app_margin_width">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_list_height"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/app_margin_width"
        android:layout_marginRight="@dimen/app_margin_width">
    <ImageView
        android:layout_width="@dimen/app_list_icon"
        android:layout_height="@dimen/app_list_icon"
        android:id="@+id/imv_main_item_icon"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/app_margin_width"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imv_main_item_text"
        android:layout_gravity="center_vertical"
        android:textColor="@color/text_white"
        android:layout_marginLeft="@dimen/app_margin_width"/>
   </LinearLayout>
</LinearLayout>