<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/project_item_shadow">
    <ImageView
        android:layout_width="@dimen/project_list_background_w"
        android:layout_height="@dimen/project_list_background_h"
        android:elevation="4dp"
        android:layout_margin="4dp"
        android:id="@+id/imv_project_icon"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_height="@dimen/app_list_height"
        android:drawableBottom="@color/div_blue"
        android:id="@+id/tv_project_title"
        android:textColor="@color/text_white"
        android:gravity="center_vertical"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/project_list_des"
        android:id="@+id/tv_project_content"
        android:lineSpacingExtra="2dp"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:textColor="@color/text_white"/>
</LinearLayout>
</LinearLayout>