<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_rel_head">

        <ImageView
            android:layout_width="@dimen/main_imv_head_height"
            android:layout_height="@dimen/main_imv_head_width"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/main_imv_head_martop"
            android:id="@+id/imv_main_head"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/app_text_title_size"
            android:id="@+id/imv_main_usename"
            android:layout_below="@+id/imv_main_head"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/div_blue"/>
    <ListView
        android:layout_marginTop="@dimen/app_margin_width"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_main_content"
        />
</LinearLayout>